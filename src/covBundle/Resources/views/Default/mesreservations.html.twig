{% extends'base1.html.twig' %}
{% block contenu %}
    <div class="div-social-top">
        <ul id="onglets">

            <li><a href="{{ path('display_compte') }}">Modifier le profil </a></li>
            <li><a href="{{ path('historique') }}"> Historique personnel </a></li>
            <li><a href="{{ path('mesoffres') }}"> Mes Offres </a></li>
            <li><a href="{{ path('mes_reservations') }}"> Mes Réservations</a></li>


        </ul>
    </div>

    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover" id="sample_1">
            <thead>
            <th>Conducteur</th>
            <th>date de naisssance Conducteur</th>
            <th>Date</th>
            <th>Heure</th>
            <th>Image Voiture</th>
            <th>Ville de Départ</th>
            <th>Ville d'Arrivée</th>
            <th>Nombre de place</th>
            <th>Prix</th>

            <th>Opérations</th>

            </thead>

            {% for reservation in reservations %}
                <tbody>
                <td> {{ reservation.getConducteur.prenom }} {{ reservation.getConducteur.nom }}</td>
                <td>{{ reservation.getConducteur.age.format('Y-m-d') }}</td>
                <td>{{ reservation.date.format('Y-m-d') }}</td>
                <td>{{ reservation.heure.format("h:m:s") }}</td>
                <td><img src="{{ asset('uploads/voitures/') }}{{ reservation.imageVaoiture}}" width="110" height="110"/></td>
                <td>{{ reservation.villeDep }}</td>
                <td>{{ reservation.villeArriv}}</td>
                <td>{{ reservation.nbrePlace }}</td>
                <td>{{ reservation.prix }}</td>

                <td><a href="{{ path('delete_reservation',{"reservation":reservation.id}) }}"> Annuler Reservation </a></td>
                </tbody>
            {% endfor %}


        </table>
    </div>
{% endblock %}