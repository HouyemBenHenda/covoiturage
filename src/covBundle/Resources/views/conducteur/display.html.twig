{% extends "base.html.twig" %}

{% block contenu%}
    <br>
    <section class="simple-section">
        <div class="container">


            <div class="row">

                <div class="col-sm-6 col-sm-offset-3">
                   {{ form_start(form) }}
                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="CIN"><i class="fa fa-info"></i></span>
                              {{ form_widget(form.numCin,{'attr':{'class':'form-control', 'placeholder':'CIN' ,'aria-describedby':'CIN', 'required':'required', 'maxlength':'8','maxlength':'number'}}) }}

                            </div>

                        </div>

                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="photo"><i class="fa fa-user"></i></span>
                                {{ form_widget(form.image,{'attr':{ 'class':'form-control', 'placeholde':'image' ,'aria-describedby':'photo', 'required':'required' }}) }}

                            </div>

                        </div>

                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="last_name"><i class="fa fa-info"></i></span>
                            {{ form_widget(form.nom,{'attr':{'class':'form-control' ,'placeholder':'Nom','aria-describedby':'last_name'}}) }}
                            </div>

                        </div>

                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="first_name"><i class="fa fa-info"></i></span>
                                {{ form_widget(form.prenom,{'attr':{'class':'form-control' ,'placeholder':'Prénom' ,'aria-describedby':'first_name' }}) }}
                            </div>

                        </div>

                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="birth_date"><i class="fa fa-calendar-o"></i></span>
                            {{ form_widget(form.age,{'attr':{'class':'form-control dtp','placeholder':'Date de naissance','aria-describedby':'birth_date' }}) }}
                            </div>

                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="sexe"><i class="fa fa-user"></i></span>
                                {{ form_widget(form.sexe,{'attr':{'class':'form-control','aria-describedby':'sexe'}}) }}
                            </div>

                        </div>

                    <div class="form-group ">
                        <div class="input-group">
                            <span class="input-group-addon" id="adresse"><i class="fa fa-info"></i></span>
                            {{ form_widget(form.adresse,{'attr':{'class':'form-control' ,'placeholder':'Adresse' ,'aria-describedby':'adresse' }}) }}
                        </div>

                    </div>

                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="email"><i class="fa fa-envelope-o"></i></span>
                                {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email','aria-describedby':'email'}}) }}
                            </div>

                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="Tél"><i class="fa fa-info"></i></span>
                                {{ form_widget(form.tel,{'attr':{ 'class':'form-control','placeholder':'Tél','aria-describedby':'Tél'}}) }}
                            </div>

                        </div>

                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="login"><i class="fa fa-keyboard-o"></i></span>
                                {{ form_widget(form.login,{'attr':{ 'class':'form-control','placeholder':'Login', 'aria-describedby':'login'}}) }}
                            </div>

                        </div>

                        <div class="form-group ">
                            <div class="input-group">
                                <span class="input-group-addon" id="password"><i class="fa fa-keyboard-o"></i></span>
                                {{ form_widget(form.password,{'attr':{ 'class':'form-control', 'placeholder':'Password','aria-describedby':'password' }}) }}
                            </div>

                        </div>


                        <div class="form-group">
                            {{ form_widget(form.submit,{'attr':{'class':'btn btn-primary'}}) }}
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </section>
{% endblock %}

{% block stylesheets %}{% endblock %}
